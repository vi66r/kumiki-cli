# -----------------------------------------------
#  Kumiki generated project.yml      {{ .ProjName }}
# -----------------------------------------------

name: {{ .ProjName }}

options:
  deploymentTarget:
    iOS: {{ .DeployTarget }}
  createIntermediateGroups: true

settings:
  INFOPLIST_FILE: Info.plist
  {{- if .TeamID }}
  DEVELOPMENT_TEAM: {{ .TeamID }}
  {{- end }}

# ---------- Swift Packages ----------

packages:
  {{- if .UsePulse }}
  Pulse:
    url: https://github.com/vi66r/Pulse
    from: 0.1.0
  {{- else if .UseShuttle }}
  Shuttle:
    url: https://github.com/vi66r/Shuttle
    from: 0.1.0
  {{- end }}

# ---------- App Target ----------

targets:
  {{ .ProjName }}:
    type: application
    platform: iOS
    bundleId: {{ .BundleID }}

    sources:
      - path: App          # <â€” explicit form XcodeGen expects now

    entitlements:
      file: {{ .ProjName }}.entitlements

    settings:
      SWIFT_VERSION: "5.10"
